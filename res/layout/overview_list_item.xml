<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_launcher" android:adjustViewBounds="false" android:scaleType="matrix"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView" android:layout_margin="5dp" style="@android:style/TextAppearance.Holo.Large"
            android:enabled="false" android:textColor="#FFFFFFFF" android:textColorHighlight="#FF00FF00"/>
</LinearLayout>