<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout">
    <ViewFlipper android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/viewFlipper">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/imageView"
                   android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                   android:src="@drawable/overview" android:scaleType="center"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Card Description Here" android:id="@+id/textView"
                  android:layout_alignLeft="@+id/imageView" android:layout_below="@+id/imageView"/>
    </ViewFlipper>
</LinearLayout>